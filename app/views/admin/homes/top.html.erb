<div class="container">
  <div class="row">
    <div class="col-12">
      <h3>注文履歴一覧</h3>
    </div>
    <table class="table">
      <thead>
        <tr class="table-light table-hober">
          <th scope="col">購入日時</th>
          <th scope="col">購入者</th>
          <th scope="col">注文個数</th>
          <th scope="col">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @orders_each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y%m%d%H%M%S') %></td>
          <td><%= order.customer.last_name %><%= order.customer.fast_name %></td>
          <td><%#= order. %></td>
          <td></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
