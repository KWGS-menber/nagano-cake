<p>11ページ</p>
<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <h3>注文履歴一覧</h3>
    </div>
    <table class="table">
      <thead>
        <tr class="table-light table-hover">
          <th scope="col-3">購入日時</th>
          <th scope="col-3">購入者</th>
          <th scope="col-1">注文個数</th>
          <th scope="col-3">注文ステータス</th>
        </tr>
      </thead>
      <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path do %>
              <%= order.created_at.strftime('%Y%m%d%H%M%S') %>
            <% end %>
          </td>
          <td><%= order.customer.last_name + " " + order.customer.fast_name %></td>
          <td><%= order.product_count %></td>
          <td><%#= order.status %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
