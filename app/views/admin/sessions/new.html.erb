<div class = 'container'>
  <div class = 'row'>
     <div class = 'col-sm-12 col-md-8 col-lg-5 px-5 px-sm0 mx-auto'>
        <h4 class = 'bg-light'>管理者ログイン</h4>
          <%= form_with model: @admin, url: admin_session_path do |f| %>
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div><br />

            <div class="actions">
              <%= f.submit "ログイン", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <%= render "admin/shared/links" %>
     </div>
  </div>
</div>