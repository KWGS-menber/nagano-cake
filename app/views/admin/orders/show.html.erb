<p>13ページ</p>
<div class="container">
  <div class="row">
    <div class="col-3 offset-2">
      <p>注文履歴詳細</p>
    </div>

    <div class="fied">
      <div class="col-3">
        <p class="text-left">購入者</p>
      </div>
      <div class="col-9">
        <p class="text-left"><%= @order.name %></p>
      </div>
    </div>

    <div class="fied">
      <div class="col-3">
        <p class="text-left">注文日</p>
      </div>
      <div class="col-9">
        <p class="text-left"><%#= @order.create_at %></p>
      </div>
    </div>

    <div class="fied">
      <div class="col-3">
        <p class="text-left">配送先</p>
      </div>
      <div class="col-9">
        <p class="text-left"><%= @order.address %></p>
      </div>
    </div>

    <div class="fied">
      <div class="col-3">
        <p class="text-left">支払方法</p>
      </div>
      <div class="col-9">
        <p class="text-left"><%= @order.payment_method %></p>
      </div>
    </div>

    <div class="fied">
      <div class="col-3">
        <p class="text-left">購入ステータス</p>
      </div>
      <div class="col-9">
        <p class="text-left"><%#= @order.status %></p>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%=order_item.product.name%></td>
          <td><%=order_item.product.price%></td>
          <td><%=order_item.product_count%></td>
          <td></td>
          <td><%=order_item.produntion_status%></td>
          <td><%= link_to"更新",admin_order_path,class: "btn btn-success" %></td>
        </tr>
        <%end%>
      </tbody>
    </table>
    
    <table>
      <tr>
        <th>商品合計</th>
        <td></td>
      </tr>
      <tr>
        <td class="bg-light">送料</td>
          <% @order.postage = 800 %>
          <td><%=@order.postage %>円</td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td>円</td>
      </tr>
    </table>



  </div>
</div>