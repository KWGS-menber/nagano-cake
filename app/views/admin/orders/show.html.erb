<p>13ページ</p>
<div class="container">
  <div class="row">
    <div class="col-4 offset-2">
      <p>注文履歴詳細</p>
    </div>

    <div class="field">
      <div class="col-3">
        <p class="text-left">購入者</p>
      </div>
      <div>
        <p class="text-left"><%= @order.name %></p>
      </div>
    </div>

    <div class="field">
      <div class="col-3">
        <p class="text-left">注文日</p>
      </div>
      <div class="col-9">
        <p class="text-left"><%= @order.create_at.strftime('%Y/%m/%d' %></p>
      </div>
    </div>

    <div class="field">
      <div class="col-3">
        <p class="text-left">配送先</p>
      </div>
      <div>
        <p class="text-left"><%= @order.address %></p>
      </div>
    </div>

    <div>
      <div class="col-3">
        <p class="text-left">支払方法</p>
      </div>
      <div class="col-9">
        <p class="text-left"><%= @order.payment_method_i18n %></p>
      </div>
    </div>

    <div>
      <div class="col-3">
        <p class="text-left">購入ステータス</p>
      </div>
      <div class="col-9">
        <p class="text-left"><%= @order.status_i18n %></p>
      </div>
    </div>

    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% total = 0 %>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%=order_item.product.name%></td>
          <td><%=order_item.product.add_tax_price.to_s(:delimited)  %></td>
          <td><%=order_item.product_count%></td>
          <td><% subtotal = ((order_item.product.price*order_item.product_count)*1.08).to_i %>
              <%= subtotal.to_s(:delimited)  %> <% total += subtotal %></td>
          <td><%=order_item.produntion_status%></td>
          <td><%= link_to"更新",admin_order_path,class: "btn btn-success" %></td>
        </tr>
        <%end%>
      </tbody>
    </table>

    <table>
      <tr>
        <th>商品合計</th>
        <td></td>
      </tr>
      <tr>
        <td class="bg-light">送料</td>
          <% @order.postage = 800 %>
          <td><%=@order.postage %>円</td>
      </tr>
      <tr>
        <th>請求金額合計</th>
        <td>円</td>
      </tr>
    </table>



  </div>
</div>