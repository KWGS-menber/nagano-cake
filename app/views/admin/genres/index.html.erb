<div class="conteiner ml-5">
  <div class="row">
    <h2 class="bg-light">ジャンル一覧・追加</h2>
  </div>
  <div class="row">      <!--Waggyの方でパス名を変更しました-->
  <%= form_with model: @genre, url:admin_genres_path, method: :post, local:true do |f| %>
    <div class="form-group">
      <%= f.label :ジャンル名 %>
      <%= f.text_area:name, class: 'form-control delivery_name' %>
    </div>
    <div class="form-group">
      <%= f.submit '新規登録', class: 'btn btn-success' %>
    </div>
  <% end %>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>