<div class = 'container'>
 <h3 class = 'mt-5 bg-light col-5'><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  <div class = 'row'>

   <%= form_with model: @customer, url:admin_customer_path do |f| %>
   <table class = 'table table-borderless mt-2 offset-1'>
     <tr>
       <th>会員ID</th>
       <td><%= f.label @customer.id %></td>
     </tr>

     <tr>
     <th>氏名</th>
     <td><%= f.text_field :last_name, class:'form-control' %></td>
     <td> <%= f.text_field :first_name, class:'form-control' %></td>
     </tr>

     <tr>
       <th>フリガナ</th>
       <td><%= f.text_field :last_kana, class:'form-control' %></td>
       <td><%= f.text_field :first_kana, class:'form-control' %></td>
     </tr>

     <tr>
       <th>郵便番号</th>
       <td><%= f.text_field :zip, class:'form-control' %></td>
     </tr>

     <tr>
       <th>住所</th>
       <td><%= f.text_field :address, class:'form-control' %></td>
     </tr>

     <tr>
       <th>電話番号</th>
       <td><%= f.text_field :phone_number, class:'form-control' %></td>
     </tr>

     <tr>
       <th>メールアドレス</th>
       <td><%= f.text_field :email, class:'form-control' %></td>
     </tr>

     <tr>
       <th>会員ステータス</th>
       <td>
           <%= f.radio_button :is_deleted, false %>
           <%= f.label :is_deleted, "有効" %>
           <%= f.radio_button :is_deleted, false %>
           <%= f.label :is_deleted, "退会" %>
       </td>
     </tr>
   </table>
  </div>

    <div class = 'row offset-2'>
     <%= f.submit "変更を保存", class:'btn btn-success'%>
    </div>
  <% end %>
</div>