<div class="container m-5">
  <div class="row">
    <div class="col-md-3">        
        <h2>商品詳細</h2>
        <%= image_tag @product.get_image(300,200)%>
    </div>
    <div class="col-md-8 offset-1 ">
        <p>商品名</p>
        <%= @product.name%>
        <p>商品説明</p>
        <%= @product.explanation%>
        <p>ジャンル</p>
        <%= @product.genre_id %>
        
        <p>税抜価格</p>
        <p><%= @product.price%>円</p>
        
        <span>販売ステータス
        <% if @product.is_active= true%>
        <%='販売中' %>
        <%else%>
        <%='販売停止中' %></span>
        <%end%>
        <div><%=link_to '編集する',edit_admin_product_path,class: 'btn btn-success' %></div>
    </div>
  </div>
</div>
