<h2>商品新規登録</h2>

<%= form_with url: new_admin_product_path, model: @product do |f|%>
<p>商品画像</p><%= f.file_field :image %>
<p>商品名</p>
<%= f.text_field :name, placeholder: "商品名"%>
<p>商品説明</p>
<%= f.text_area:explanation, placeholder: "ここに説明文を記述します"%>
<p>ジャンル</p>
<%= f.text_field:genre_id %>
<!--%= f.select :genre_id,{ '選択してください':""}%-->
<p>税抜価格</p>
<p><%= f.number_field:price, placeholder: "1000"%>円</p>

<span>販売ステータス
<%= f.radio_button:is_active, true %>
<%= f.label:is_active, '販売中', value: true %>

<%= f.radio_button:is_active, false%>
<%= f.label:is_active, '販売停止中', value: false %></span>

<div><%= f.submit'新規登録',class: 'btn btn-success' %></div>
<%end%>
