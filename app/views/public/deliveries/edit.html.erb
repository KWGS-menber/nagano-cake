<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/errors', obj: @delivery %>
  		<h2 class="bg-light">配送先編集</h2>
      <%= form_with model: @delivery, url:public_delivery_path(@delivery.id), method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :郵便番号(ハイフンなし) %>
        <%= f.text_area:zip, class: 'form-control delivery_zip' %>
      </div>
      <div class="form-group">
        <%= f.label :郵便番号 %>
        <%= f.text_area:address, class: 'form-control delivery_address' %>
      </div>
      <div class="form-group">
        <%= f.label :宛名 %>
        <%= f.text_area:name, class: 'form-control delivery_name' %>
      </div>
      <div class="form-group">
        <%= f.submit '変更内容を保存', class:"btn btn-success" %>
      </div>
      <% end %>
  	</div>
  </div>
</div>