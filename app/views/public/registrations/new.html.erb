<div class = 'container'>
  <div class = 'row login-row'>

    <h2>新規会員登録</h2>

      <%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
        <%#= render "admins/shared/error_messages", resource: resource %>

        <div class = 'row'>

         <div class="field">
          <%= f.label :名前  %><br />
          <%= f.label :（姓） %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
          <%= f.label :（名） %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
        </div>

         <div class="field">
          <%= f.label :フリガナ  %><br />
          <%= f.label :（セイ） %>
          <%= f.text_field :first_kana, autofocus: true, autocomplete: "email" %>
          <%= f.label :（メイ） %>
          <%= f.text_field :last_kana, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :郵便番号（ハイフンなし） %><br />
          <%= f.text_field :zip, autofocus: true, placeholder:"0000000", autocomplete: "email" %>
        </div>

         <div class="field">
          <%= f.label :住所 %><br />
          <%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :電話番号（ハイフンなし） %><br />
          <%= f.text_field :phone_number, autofocus: true, placeholder:"0000000000", autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード（６文字以上） %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "password"%>
        </div>

        <div class="field">
          <%= f.label :パスワード（確認用） %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
      
         <div>
            <h6>既に登録済みの方</h6>
            <p><%= link_to "こちら", new_customer_registration_path %>からログインしてください。</p>
          </div>

      <%#= render "admins/shared/links" %>
      </div>

  </div>
</div>