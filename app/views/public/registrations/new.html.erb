<div class = 'container'>
  <h4 class = 'bg-light'><strong>新規会員登録</strong></h4>
    <div class = 'row'>
      <%= form_with model: @customer, url:customer_registration_path, local: true do |f| %>
        <%#= render "adminsshared/error_messages", resource: resource %>
        <div class = 'field row'>
          <%= f.label :名前, class:'col-4' %>
          <%= f.label :（姓） %>
          <%= f.text_field :last_name, autofocus: true, placeholder:"令和" ,autocomplete: "email" %>
          <%= f.label :（名） %>
          <%= f.text_field :first_name, autofocus: true, placeholder:"道子", autocomplete: "email" %>
        </div>

         <div class = 'field row'>
          <%= f.label :フリガナ  %>
          <%= f.label :（セイ） %>
          <%= f.text_field :last_kana, autofocus: true, placeholder:"レイワ", autocomplete: "email" %>
          <%= f.label :（メイ） %>
          <%= f.text_field :first_kana, autofocus: true, placeholder:"ミチコ", autocomplete: "email" %>
        </div>

        <div class = 'field row'>
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
        </div>

        <div class = 'field row'>
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :zip, autofocus: true, placeholder:"0000000", autocomplete: "email" %>
        </div>

         <div class = 'field row'>
          <%= f.label :住所 %>
          <%= f.text_field :address, autofocus: true, placeholder:"東京都渋谷区代々木神園町0-0", autocomplete: "email" %>
        </div>

        <div class = 'field row'>
          <%= f.label :電話番号（ハイフンなし） %>
          <%= f.text_field :phone_number, autofocus: true, placeholder:"0000000000", autocomplete: "email" %>
        </div>

        <div class = 'field row'>
          <%= f.label :パスワード（６文字以上） %>
          <%= f.password_field :password, autocomplete: "new-password", class: "password"%>
        </div>

        <div class = 'field row'>
          <%= f.label :パスワード（確認用） %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password_confirm" %>
        </div><br />

        <div class = 'actions'>
          <%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>

      <h4 class = 'bg-light'>既に登録済みの方</h4>
        <p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>

    <%#= render "admin/shared/links" %>
</div>