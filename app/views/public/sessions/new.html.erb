<div class = 'container'>
   <div class = 'row aligh-items-center'>
     <div class = 'col-sm-12 col-md-8 col-lg-5 px-5 px-sm0 mx-auto'>
      <h4 class = 'bg-light'><strong>ログイン</strong></h4>
        <h6 class = 'bg-light'><strong>会員の方はこちらからログイン</strong></h6>
              <%= form_with model: @customer, url: session_path(resource_name), local: true do |f| %>
                <div class="field">
                  <%= f.label :"メールアドレス" %><br />
                  <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
                </div>

                <div class="field">
                  <%= f.label :"パスワード" %><br />
                  <%= f.password_field :password, autocomplete: "current-password" %>
                </div><br />

                <div class="actions">
                  <%= f.submit "ログイン", class: 'btn btn-primary' %>
                </div>
              <% end %>
      </div>
    </div>

         <h6 class = 'bg-light'><strong>会員登録がお済みでない方</strong></h6>
            <p><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>
    <%#= render "admins/shared/links" %>
</div>

<div class="row g-3 align-items-center">
  <div class="col-auto">
    <label for="inputPassword6" class="col-form-label">Password</label>
  </div>
  <div class="col-auto">
    <input type="password" id="inputPassword6" class="form-control" aria-describedby="passwordHelpInline">
  </div>
  <div class="col-auto">
    <span id="passwordHelpInline" class="form-text">
      Must be 8-20 characters long.
    </span>
  </div>
</div>