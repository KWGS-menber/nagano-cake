<div class = 'container'>
   <div class = 'row'>
     <div class ='col'>
      <h4 class = 'col-3 bg-light'><strong>ログイン</strong></h4>
        <h6 class = 'col-3 bg-light'><strong>会員の方はこちらからログイン</strong></h6>
              <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>

                <div class = 'field my-2'>
                  <%= f.label :"メールアドレス", class:'px-3 pb-1' %>
                  <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email", class:'form-control offset-1 col-6' %>
                </div>

                <div class = 'field my-2'>
                  <%= f.label :"パスワード", class:'px-3 pb-1' %>
                  <%= f.password_field :password, autocomplete: "current-password", class:'form-control offset-1 col-6' %>
                </div><br />

                <div class = 'actions text-center'>
                  <%= f.submit "ログイン", class: 'btn btn-primary' %>
                </div>
              <% end %>
     </div>
    </div>
         <h6 class = 'col-3 bg-light'><strong>会員登録がお済みでない方</strong></h6>
            <p class = 'offset-2'><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</p>
    <%#= render "admin/shared/links" %>
</div>