<div class = 'container'>
  <h2 class = 'my-5'>注文履歴詳細</h2>
   <div class = 'row'>
    <% if @order.present? %>
     <strong>注文情報</strong>
       <table>
        <tbody>
         <tr>
          <th>注文日</th>
           <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
         </tr>

         <tr>
          <th>配達先</th>
           <td><%= "〒" + zip + "  " + address + "  " + name  %></td>
         </tr>

         <tr>
          <th>支払方法</th>
           <td><%= @order.payment_method %></td>
         </tr>

         <tr>
          <th>ステータス</th>
           <td><%= @order.status %></td>
         </tr>
        </tbody>
       </table>

    <strong>請求情報</strong>
     <table>
      <tbody>
       <tr>
        <th>商品合計</th>
         <td><%= @order.total_price %></td>
       </tr>

       <tr>
        <th>配送料</th>
         <td><%= @order.postage %></td>
       </tr>

       <tr>
        <th><strong>ご請求額</strong></th>
         <td><%= @order.total_price + @order.postage %></td>
       </tr>
      </tbody>
     </table>

    <strong>注文内容</strong>
     <table>
      <thead>
       <tr>
        <th>商品</th>
        <th>単価（税込）</th>
        <th>個数</th>
        <th>小計</th>
        <td></td>
       </tr>
      </thead>

      <tbody>
       <% @order_items.each do |order_item| %>
        <tr>
         <td><%= order_item.name %></td>
         <td><%= order_item.price%></td>
         <td><%= order_item.product_count %></td>
         <td><%= order_item.total_price %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
    <% else %>
     <p class = 'container'>注文履歴がありません。</p>
    <% end %>
   </div>
</div>