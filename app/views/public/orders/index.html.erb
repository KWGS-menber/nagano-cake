<div class = 'container'>
 <div class = 'row'>
  <h2>注文履歴一覧</h2>
   <% if @orders.present? %>
    <table>
     <thead>
      <tr>
       <th>注文日</th>
       <th>配送先</th>
       <th>注文商品</th>
       <th>支払金額</th>
       <th>ステータス</th>
       <th>注文詳細</th>
      </tr>
     </thead>
     <tbody>
      <% @orders.each do |order| %>
       <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %> </td>
        <td>
            <%= order.zip %><br>
     		     <%= order.address %><br>
     		     <%= order.name %>
     		 </td>
     		 <td>
     		     <% order.order_details.each do |order_detail| %>
     		     <%= order_detail.product.name %><br>
     		     <% end %>
     		 </td>
     		 <td>
     		     <%= order.total_payment.to_s(:delimited) %>円
     		 </td>
     		 <td>
     		     <%= status %>
     		 </td>
        <td>
        	   <%= link_to "注文詳細", order_path, class: "btn btn-success" %>
        </td>
       </tr>
      <% end %>
     </tbody>
    </table>
   <% else %>
    <p class = 'container'>注文履歴がありません。</p>
   <% end %>
 </div>
</div>