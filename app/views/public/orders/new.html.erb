<div class="container my-2">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3">注文情報入力</h2>
    </div>
  </div>

  <div class="row">
    <div class="offset-2 col-5">
    <!-- 支払い方法選択 -->
      <div class="row">
      <%= form_with model: @order, url:orders_confirm_path, method: :post, local: true do |f| %>
        <strong class="col-12  text-left">支払方法</strong>
        <div class="col-12 radio text-left">
          <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

          <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
          <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
        </div>

        <!--届け先方法-->
        <strong class="col-12  text-left py-2">お届け先</strong>
        <div class="col-12 text-left">
          <%= f.radio_button :select_address, 1 %>
          <%= f.label :select_address, "ご自身の住所" %><br>
          <%= @address %><br>

          <%= f.radio_button :select_address, 2 %>
          <%= f.label :select_address, "登録済み住所から選択" %><br>
          <%= f.select :address_id, options_from_collection_for_select(current_customer.deliveries, :id, :address) %><br>

          <%= f.radio_button :select_address, 3 %>
          <%= f.label :select_address, "新しいお届け先" %><br>
            <%= f.label :delivery_zip, "郵便番号" %><%= f.text_field :delivery_zip, :placeholder => "1234567", class: 'form-control delivery_zip' %><br>
            <%= f.label :delivery_address, "住所" %><%= f.text_field :delivery_address, :placeholder => "東京都渋谷〇〇", class: 'form-control delivery_address' %><br>
            <%= f.label :delivery_name, "宛名" %><%= f.text_field :delivery_name, :placeholder => "令和　道子", class: 'form-control delivery_name' %><br>
          <%= f.submit '確認画面へ進む', class: 'btn btn-primary' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>