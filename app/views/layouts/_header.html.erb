<header>
  <nav class="navbar navbar-expand-lg navbar-light">
    <%= link_to root_path do %>
        <%= image_tag 'logo_sample.jpeg', size: "200x50" %>
      <% end %>
      <div class="container">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
      <!--customerでログインしている時-->
      <% if customer_signed_in? %>
        <li>ようこそ、<%= current_customer.last_name %>さん！</li>
        <li><%= link_to customers_my_page_path(current_customer), class:'btn btn-outline-dark bg-warning mr-5' do %>マイページ<% end %></li>
        <li><%= link_to products_path, class:'btn btn-outline-dark bg-warning mr-5' do %>商品一覧<% end %></li>
        <li><%= link_to cart_items_path, class:'btn btn-outline-dark bg-warning mr-5' do %>カート<% end %></li>
        <li><%= link_to destroy_customer_session_path, method: :delete, class:'btn btn-outline-danger bg-warning mr-5' do %>ログアウト<% end %></li>
      <!--adminでログインしている時-->
      <% elsif admin_signed_in? %>

        <li><%= link_to admin_products_path, class:'btn btn-outline-dark bg-warning mr-4' do %>商品一覧<% end %></li>
        <li><%= link_to admin_customers_path, class:'btn btn-outline-dark bg-warning mr-4' do %>会員一覧<% end %></li>
        <li><%= link_to admin_orders_path, class:'btn btn-outline-dark bg-warning mr-4' do %>注文履歴一覧<% end %></li>
        <li><%= link_to admin_genres_path, class:'btn btn-outline-dark bg-warning mr-4' do %>ジャンル一覧<% end %></li>
        <li><%= link_to destroy_admin_session_path, method: :delete, class:'btn btn-outline-danger bg-warning' do %>ログアウト<% end %></li>

      <% else %>
      <!--ログインしていない状態-->
        <li><%= link_to products_path, class:'btn btn-outline-dark  bg-warning mr-5' do %>商品一覧<% end %></li>
        <li><%= link_to about_path, class:'btn btn-outline-dark bg-warning mr-5' do %>アバウト<% end %></li>
        <li><%= link_to new_customer_registration_path, class:'btn btn-outline-dark bg-warning mr-5' do %>新規登録<% end %></li>
        <li><%= link_to new_customer_session_path,  class:'btn btn-outline-danger bg-warning' do %>ログイン<% end %></li>
      <% end %>
      </ul>
    <!--</nav>-->
      </div>
    </div>
  </nav>
</header>